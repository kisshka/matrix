<Window x:Class="lab_8testing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_8testing"
        mc:Ignorable="d"
        FontSize="12px"
        Title="Матрица" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Ввод размера матрицы -->
        <TabPanel Grid.Row="0" HorizontalAlignment="Center" Margin="5">
            <Label  Grid.Column="0" Content="Кол-во столбцов:"/>
            <TextBox Name="ColumnsInput" Margin="5" Width="200"/>
        </TabPanel>

        <TabPanel Grid.Row="1" HorizontalAlignment="Center" Margin="5">
            <Label  Content="Кол-во строк:"/>
            <TextBox Name="RowsInput" Margin="5" Width="200"/>
        </TabPanel>


        <!-- Кнопка для создания матрицы -->
        <StackPanel Grid.Row="2">

            <TabPanel  HorizontalAlignment="Center">
            <Button  Content="Создать пустую матрицу" Click="CreateMatrix_Click" Width="250px" 
                HorizontalAlignment="Left" Margin="10 0"/>
                <Button  Content="Сгенерировать матрицу" Click="GenerateMatrix_Click" Width="250px"
                     HorizontalAlignment="Right" Margin="10 0"/>
            </TabPanel>

            <!-- Изменение элемента -->
            <TabPanel Margin="5">
                <Label Content="Столбец:"/>
                <TextBox x:Name="col" Width="20"/>
                <Label Content="Строка:"/>
                <TextBox x:Name="row" Width="20"/>
                <Label Content="Значение:"/>
                <TextBox Name="val" Width="20"/>
            </TabPanel>
            <Button Content="Изменить элемент" Width="235" Height="20" HorizontalAlignment="Left" Click="EditMatrixElement_Click"/>
        </StackPanel>
        <!-- Матрица-->
        <ListBox Name="MatrixDisplay" Grid.Row="3" Grid.ColumnSpan="2" Margin="5" HorizontalAlignment="Center" BorderBrush="White"/>

        <StackPanel Grid.Row="4" >
        <TabPanel Margin="10">
            <CheckBox Name="isEven" Content="Только положительные строки"/>
            <Button Content="Найти произведение отрицательных элементов" Click="MultiplyMatrix_Click" Width="400px"
             Margin="10 0"/>
        </TabPanel>
            <TextBlock Text="Результат" x:Name="multResult" Margin="10" HorizontalAlignment="Center"></TextBlock>
        </StackPanel>
<!--run coverlet XUnit-->
    </Grid>
</Window>
